<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sulwep7.tarotpointcounterback.mapper.PlayersScoreMapper">
    <resultMap id="playerScoreResultMap" type="com.sulwep7.tarotpointcounterback.model.PlayerScore">
        <id property="gameId" column="gameId"/>
        <result property="playerName" column="playerName"/>
        <result property="playerScore" column="playerScore"/>
    </resultMap>

    <select id="getPlayersScoreOfGame" resultMap="playerScoreResultMap" parameterType="int">
        select * from players_score
        where gameId = #{GAME_ID};
    </select>

    <insert id="insertPlayerScore">
        insert into players_score(gameId,playerName,playerScore)
        values(#{GAME_ID},#{PLAYER_NAME},#{PLAYER_SCORE});
    </insert>

    <update id="updatePlayerScore">
        update players_score
        set playerScore = #{PLAYER_SCORE}
        where gameId = #{GAME_ID}
        and playerName = #{PLAYER_NAME};
    </update>
</mapper>